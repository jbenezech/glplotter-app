{
  "name": "@glplotter-app/web",
  "version": "0.1.0",
  "homepage": "./react",
  "dependencies": {
    "@craco/craco": "^6.4.5",
    "@glplotter-app/common": "*",
    "glplotter": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "prebuild": "yarn run lint",
    "format": "npx prettier --write . \"{**/*,*}.{js,ts,jsx,tsx,css,scss,sass}\"",
    "lint": "npx eslint src/ --ext .js,.jsx,.ts,.tsx --ignore-pattern node_modules/",
    "lint-format": "npm run format && npm run lint",
    "precommit": "yarn pretty-quick --staged && yarn dlx eslint src/ --ext .js,.jsx,.ts,.tsx --ignore-pattern node_modules/ --cache --fix"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@types/react-router-dom": "^5.3.3",
    "@types/sharedworker": "^0.0.86",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "craco-alias": "^3.0.1",
    "craco-babel-loader": "^1.0.3",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "latest",
    "postcss": "^8.4.19",
    "postcss-scss": "^4.0.5",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.56.0",
    "stylelint": "^14.14.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "github:jbenezech/stylelint-config-sass-guidelines#fix/postcss-yarn",
    "stylelint-config-standard": "^29.0.0",
    "typescript": "^4.8.4"
  }
}
