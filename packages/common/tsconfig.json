{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "declarationDir": "dist",
  },
  "include": [
    "src",
    "src/**/*",
    "src/**/*.json"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "NodeNext"
    }
  }
}
